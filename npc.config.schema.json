{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://mitallast.github.io/roguelike-dungeon/npc.config.schema.json",
  "title": "NPC configuration schema",
  "type": "object",
  "properties": {
    "npc": {
      "type": "object",
      "patternProperties": {
        "^[a-z]+(_[a-z0-9]+)*$": {
          "$ref": "#/definitions/NPC"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["npc"],
  "definitions": {
    "NPC": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z]+(_[a-z0-9]+)*$"
        },
        "healthMax": {
          "type": "number",
          "minimum": 1,
          "maximum": 100
        },
        "health": {
          "type": "number",
          "minimum": 1,
          "maximum": 100
        },
        "baseDamage": {
          "type": "number",
          "minimum": 1,
          "maximum": 100
        },
        "speed": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 2
        },
        "coins": {
          "type": "number",
          "minimum": 0
        },
        "skills": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "selling",
              "buying",
              "heal"
            ]
          }
        },
        "weapons": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z]+(_[a-z0-9]+)*$"
          }
        },
        "trading": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "potions",
              "weapons"
            ]
          }
        },
        "width": {
          "type": "number",
          "minimum": 1,
          "maximum": 2
        },
        "height": {
          "type": "number",
          "minimum": 1,
          "maximum": 2
        }
      },
      "required": [
        "name",
        "healthMax",
        "health",
        "baseDamage",
        "speed",
        "coins",
        "skills",
        "weapons",
        "trading",
        "width",
        "height"
      ],
      "additionalProperties": false
    }
  }
}